{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.dotfiles/ai/skills/speech/hooks/speak_response.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "additionalDirectories": [
      "~/.dotfiles/ai/"
    ],
    "allow": [
      "Bash(~/.dotfiles/ai/bin/speech-off)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(pbcopy:*)",
      "Read(~/.dotfiles/ai/*)",
      "Skill",
      "WebSearch",
      "WebFetch",
      "WebFetch(domain:*)",
      "mcp__linear__get_issue",
      "mcp__linear__list_comments"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["postgres", "sentry", "linear", "figma"],
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowLocalBinding": true
    }
  }
}
