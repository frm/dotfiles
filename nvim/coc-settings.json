{
  "coc.preferences.formatOnSaveFiletypes": [
    "elixir",
    "javascript",
    "javascriptreact",
    "rust",
    "typescript",
    "typescriptreact",
    "c",
    "markdown"
  ],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.rootPatterns": [".git", "package.json"],

  "codeLens.enable": false,
  "diagnostic.displayByAle": false,
  "diagnostic.enable": true,
  "diagnostic.enableMessage": "always",
  "diagnostic.errorSign": "→",
  "diagnostic.hintSign": ">>",
  "diagnostic.infoSign": ">>",
  "diagnostic.warningSign": "→",
  "diagnostic.virtualText": true,
  "signature.hideOnTextChange": true,
  "suggest.floatEnable": false,
  "suggest.noselect": true,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "emmet.includeLanguages": {
    "html-eex": "html"
  },

  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.options": { "cache": true },
  "eslint.autoFixOnSave": true,
  "git.command": "hub",
  "git.addGBlameToVirtualText": false,
  "elixir.pathToElixirLS": "~/.local/share/nvim/plugged/elixir-ls/dist/language_server.sh"
}
