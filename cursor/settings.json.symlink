{
  "diffEditor.codeLens": true,
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "FiraCode Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "files.insertFinalNewline": true,
  "window.commandCenter": true,
  "workbench.activityBar.orientation": "vertical",
  "workbench.sideBar.location": "right",
  "terminal.integrated.tabs.enabled": false,
  "git.openRepositoryInParentFolders": "never",

  // cursor settings
  "cursor.chat.smoothStreaming": true,
  "cursor.general.gitGraphIndexing": "enabled",

  // colours
  "catppuccin.italicKeywords": false,
  "workbench.colorTheme": "Rouge No Italics",

  // neovim integration
  "extensions.experimental.affinity": {
      "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
      "jk": {
          "command": "vscode-neovim.escape"
      },
      "fs": {
          "command": "vscode-neovim.send",
          "when": "editorTextFocus && neovim.mode != insert",
          "args": ":HintChar1<CR>"
      }
  },

  // projectManager
  "projectManager.git.baseFolders": ["~/Developer"],

  // spelling
  "cSpell.userWords": [
      "HRIS"
  ],

  // language specific settings
  "[javascript]": {
    "updateImportsOnFileMove.enabled": "always"
  },
  "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "updateImportsOnFileMove.enabled": "always"
  }

  // elixirLS
  "elixirLS.fetchDeps": true,
  // "elixirLS.languageServerOverridePath": "$HOME/.local/share/nvim/lazy/elixir-ls/dist",
}
