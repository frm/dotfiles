{
  "diffEditor.codeLens": true,
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "FiraCode Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "window.commandCenter": true,
  "workbench.activityBar.orientation": "vertical",
  "git.openRepositoryInParentFolders": "never",
  // cursor settings
  "cursor.chat.smoothStreaming": true,
  "cursor.general.gitGraphIndexing": "enabled",
  // colours
  "catppuccin.italicKeywords": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  // neovim integration
  "extensions.experimental.affinity": {
      "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
      "jk": {
          "command": "vscode-neovim.escape"
      },
      "fs": {
          "command": "vscode-neovim.send",
          "when": "editorTextFocus && neovim.mode != insert",
          "args": ":HopChar1<CR>"
      }
  },
  // elixirLS
  "elixirLS.fetchDeps": true,
  // "elixirLS.languageServerOverridePath": "$HOME/.local/share/nvim/lazy/elixir-ls/dist",
  // projectManager
  "projectManager.git.baseFolders": ["~/Developer"],
  // spelling
  "cSpell.userWords": ["HRIS"]
}
