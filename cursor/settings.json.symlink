{
  // cursor settings
  "cursor.aipreview.enabled": true,
  "cursor.chat.smoothStreaming": true,
  "cursor.cmdk.useThemedDiffBackground": true,
  "cursor.general.gitGraphIndexing": "enabled",

  // vscode settings
  "diffEditor.codeLens": true,
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "FiraCode Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "relative",
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "git.openRepositoryInParentFolders": "never",
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true
  "terminal.integrated.tabs.enabled": false,
  "window.commandCenter": true,
  "workbench.activityBar.orientation": "vertical",
  "workbench.sideBar.location": "right",

  // colours
  "catppuccin.italicKeywords": false,
  "workbench.colorTheme": "Ayu Dark",

  // neovim integration
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
    "jk": {
      "command": "vscode-neovim.escape"
    },
    "fs": {
      "command": "vscode-neovim.send",
      "when": "editorTextFocus && neovim.mode != insert",
      "args": ":HintChar1<CR>"
    }
  },

  // projectManager
  "projectManager.git.baseFolders": ["~/Developer"],

  // spelling
  "cSpell.userWords": ["HRIS"],

  // language specific settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "python.createEnvironment.trigger": "off",

  // elixirLS
  // "elixirLS.languageServerOverridePath": "$HOME/.local/share/nvim/lazy/elixir-ls/dist",
  "elixirLS.fetchDeps": true
}
